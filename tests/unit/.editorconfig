# http://editorconfig.org

# top-most EditorConfig file
root = false

# every file needs these
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# C++ files want tab indentation
[*.{h,cpp}]
indent_style = space
indent_size = 4

# Makefiles want tab indentation
[Makefile.am]
indent_style = tab
indent_size = 2

# CMake configuration files
[CMakeLists.txt]
indent_style = space
indent_size = 2

# CMake modules
[*.cmake]
indent_style = space
indent_size = 2
